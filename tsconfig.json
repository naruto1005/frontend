{
  "compilerOptions": {
    "target": "es2020",                          // Set target to ES2020 for better modern JavaScript support
    "module": "commonjs",                         // Keep the module system as CommonJS
    "esModuleInterop": true,                      // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,     // Enforce consistent file casing in imports
    "skipLibCheck": true,                         // Skip type checking for libraries (this is usually fine)
    "jsx": "react-jsx",                           // Use the new JSX transform for React 17+
    "strict": true,                               // Enable strict type checking (good practice)
    "moduleResolution": "node",                   // Make module resolution work more like Node.js
    "resolveJsonModule": true                     // Allow importing JSON files
  },
  "include": [
    "src/**/*"                                    // Include all files from the 'src' folder
  ]
}
